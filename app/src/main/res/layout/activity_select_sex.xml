<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectSexActivity"
    android:orientation="vertical">
<include layout="@layout/toplayout"></include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex_select"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/main_fragment_name"
        android:layout_marginTop="@dimen/main_height"
        android:textColor="@color/cyan"/>
    <LinearLayout
        android:id="@+id/ll_men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_height">
        <ImageView
            android:layout_width="@dimen/main_image_size"
            android:layout_height="@dimen/main_image_size"
            android:src="@drawable/header_icon_2"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/iv_men"
            android:layout_width="@dimen/main_fragment_name"
            android:layout_height="@dimen/main_fragment_name"
            android:src="@drawable/gouxuanqx"
            android:layout_marginTop="@dimen/main_fragment_name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_women"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_height">
        <ImageView
            android:layout_width="@dimen/main_image_size"
            android:layout_height="@dimen/main_image_size"
            android:src="@drawable/header_icon_2"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/iv_women"
            android:layout_width="@dimen/main_fragment_name"
            android:layout_height="@dimen/main_fragment_name"
            android:src="@drawable/gouxuanqx"
            android:layout_marginTop="@dimen/main_fragment_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/main_height"
        android:layout_marginLeft="@dimen/main_fragment_name"
        android:layout_marginRight="@dimen/main_fragment_name">
        <Button
            android:id="@+id/bt_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sex_return"
            android:layout_marginRight="@dimen/top_size"
            android:background="@drawable/button_sex_shape"
            android:textColor="@color/cyan"/>
        <Button
            android:id="@+id/bt_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sex_return"
            android:layout_marginLeft="@dimen/top_size"
            android:background="@drawable/button_sex_shape"
            android:textColor="@color/cyan"/>
    </LinearLayout>
</LinearLayout>